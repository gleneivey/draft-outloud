source 'http://rubygems.org'

gem 'rails', '3.1.0'
gem 'jquery-rails'
gem 'mongrel'
gem 'mysql'
gem 'nokogiri'

group :assets do
  gem 'sass-rails'
  gem 'uglifier'
  gem 'therubyracer' # a JS runtime for execjs for uglifier
end

group :test, :development do
  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'aruba'
  gem 'database_cleaner'
  gem 'capistrano'
end
